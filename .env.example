# ─────────────────────────────────────────────
# ThesisMatch API — Variables d'environnement
# Copier ce fichier en .env et remplir les valeurs
# ─────────────────────────────────────────────

# Serveur
PORT=3000
NODE_ENV=development

# Base de données
# Développement local (SQLite) :
DATABASE_URL="file:./data/thesismatch.db"
# Production (PostgreSQL) :
# DATABASE_URL="postgresql://user:password@localhost:5432/thesismatch?schema=public"

# JWT
JWT_SECRET=change-this-to-a-long-random-secret-in-production
JWT_EXPIRES_IN=24h

# Compte admin initial (créé au premier démarrage)
ADMIN_EMAIL=admin@uclouvain.be
ADMIN_PASSWORD=admin123
ADMIN_NOM=Admin
ADMIN_PRENOM=ThesisMatch

# Stockage des fichiers uploadés
UPLOADS_DIR=./uploads

# API Anthropic (pour le chatbot RAG — Phase 4)
# ANTHROPIC_API_KEY=sk-ant-...

# Frontend URL (pour CORS en production)
# FRONTEND_URL=https://thesismatch.uclouvain.be
